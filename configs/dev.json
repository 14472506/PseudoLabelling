{
    "model":{
        "model_name": "Mask_RCNN_Resnet_50_FPN",
        "pre_trained": true,
        "trainable_layers": 5,
        "num_classes": 2
    },   
    "dataset":{
        "train":{
            "dir": "datasets/sources/jersey_dataset_v4/train",
            "json_dir": "datasets/sources/jersey_dataset_v4/train/train.json",
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 4
        },
        "val":{
            "dir": "datasets/sources/jersey_dataset_v4/val",
            "json_dir": "datasets/sources/jersey_dataset_v4/val/val.json",
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 4
        },
        "test":{
            "dir": "datasets/sources/jersey_dataset_v4/test",
            "json_dir": "datasets/sources/jersey_dataset_v4/test/test.json",
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 4
        }
    },
    "optimizer":{
        "opt_name": "Adam",
        "opt_lr": 0.00005, 
        "sched_name": "StepLR",
        "sched_step": 2,
        "sched_gamma": 0.1
    },
    "loop":{
        "train": false,
        "test": true,
        "start_epoch": 0, 
        "end_epochs": 80,
        "loop_type": "instance",
        "device": "cuda:0",
        "scheduler": true
    },
    "logging":{
        "logger": "base_instance_logger",
        "path": "outputs/multi_task_dev/test_1",
        "pth_name": "saver_test1_best.pth"
    }
}